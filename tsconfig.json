{
  "compilerOptions": {
    "experimentalDecorators": true,

    // this is required, else decorated controller params result in a crash
    "emitDecoratorMetadata": true,
    "strict": true,
    "outDir": "./dist/debug",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "declarationMap": true,
    "allowJs": false,
    "lib": ["ES6"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@rebel/*": ["./*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "./node_modules",
    "./prisma",

    // related to data migrations - ignore for now
    "./src/scripts/migrations/_dataMigrationTemplate.ts",
    "./src/scripts/migrations/applyMigrations.ts",
    "./src/scripts/migrations/migrateData.ts"
  ]
}
