{
  "compilerOptions": {
    "experimentalDecorators": true,

    // this is required, else decorated controller params result in a crash
    "emitDecoratorMetadata": true,
    "rootDir": "src",
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowJs": false,
    "lib": ["ES6"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@controllers/*": ["controllers/"],
      "@models/*": ["models/"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
