{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach",
      "type": "node",
      "protocol": "inspector",
      "request": "attach",
      "stopOnEntry": false,
      "port": 9229,
      "localRoot": "${workspaceRoot}/dist/",
      "remoteRoot": "${workspaceRoot}/dist/",
      "sourceMaps": true,
    },
    {
      "name": "start:debug",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "start:debug"
      ],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node",
    },
    {
      "name": "start:mock",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "start:mock"
      ],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node",
    }
  ]
}