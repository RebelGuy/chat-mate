{
  "extends": "../../tsconfig.base.json",
  "exclude": ["**/__tests__", "**/*.test.ts", "tools", "lib"],
  "compilerOptions": {
    "composite": true,
    "target": "es2020",
    "module": "commonjs",
    "outDir": "../../dist/debug/masterchat",
    // the first dir is required so the debugger can find sourcemaps,
    // the second is required for the actual compilation
    "rootDirs": ["./", "./src"]
  },
  "include": [
    "./**/*"
  ]
}
